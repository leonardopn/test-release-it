{
	"name": "@leonardopn/test-release-it",
	"version": "1.1.0-beta.2",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/leonardopn/test-release-it.git"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.pkg.github.com"
	},
	"scripts": {
		"start:dev": "nodemon ./src/index.ts",
		"deploy:beta": "release-it --ci --preRelease=beta",
		"deploy:prod": "release-it --ci"
	},
	"type": "module",
	"devDependencies": {
		"@release-it/conventional-changelog": "^9.0.2",
		"nodemon": "^3.1.7",
		"release-it": "^17.10.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	},
	"release-it": {
		"npm": {
			"publish": true
		},
		"github": {
			"release": true,
			"tokenRef": "GITHUB_TOKEN",
			"releaseName": "v${version}"
		},
		"git": {
			"tagName": "v${version}",
			"commitMessage": "chore(release): v${version} [skip ci]",
			"tagAnnotation": "v${version}",
			"push": true,
			"commit": true,
			"tag": true,
			"requireCommits": false,
			"requireCleanWorkingDir": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "‚ú® Novos Recursos"
						},
						{
							"type": "fix",
							"section": "üêõ Corre√ß√µes de Bugs"
						},
						{
							"type": "chore",
							"section": "üîß Outras Tarefas"
						},
						{
							"type": "docs",
							"section": "üìù Documenta√ß√£o"
						},
						{
							"type": "style",
							"section": "üíÑ Estilo"
						},
						{
							"type": "refactor",
							"section": "‚ôªÔ∏è Refatora√ß√£o"
						},
						{
							"type": "perf",
							"section": "‚ö°Ô∏è Desempenho"
						},
						{
							"type": "test",
							"section": "‚úÖ Testes"
						}
					]
				},
				"infile": "CHANGELOG.md",
				"header": "# Changelog\n\nTodos os lan√ßamentos.\n\n"
			}
		}
	}
}
